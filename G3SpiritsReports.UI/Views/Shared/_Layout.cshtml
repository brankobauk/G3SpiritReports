<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Selling Data Reports", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <nav>
                    <ul id="menu">
                        <li>&nbsp;</li>
                        @if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Tables", "Index", "Home")</li>
                            <li>@Html.ActionLink("DailyReports", "Index", "MonthlyBrandReport")</li>
                            <li>@Html.ActionLink("MonthlyPlans", "Index", "MonthlyBRandPlan")</li>
                            <li>@Html.ActionLink("MonthlyReports", "Index", "MonthlyReport")</li>
                            <li>@Html.ActionLink("YearlyBrandReports", "Index", "YearlyBrandReport")</li>
                            <li>@Html.ActionLink("Brands", "Index", "Brand")</li>
                            <li>@Html.ActionLink("Countries", "Index", "Country")</li>
                            <li>@Html.ActionLink("Users", "Index", "Account")</li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Soft.si, All Rights Reserved.</p>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>